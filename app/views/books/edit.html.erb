<style>
    .container{
       
       margin::10px auto 10px; 
    }  
        
</style>

<div class = "container">
<h1>Editing Book</h1>

 <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title,class: 'commit'  %>
  
  <h4>Opinion</h4>
  
  <%= f.text_area :body,class: 'commit'  %></br>
  
 <%= f.submit 'Update Book', class: 'btn btn-success w-35 h-20' %><br>
  
  <%= link_to "Show",book_path %>|
  <%= link_to "Back",books_path %>
  
<% end %>
</div>
