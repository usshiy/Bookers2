<style>
  .container {
    margin: 10px auto;
  }

  .row {
    margin: 0 auto;
  }

  .col-md-3 {
    margin: 0 auto;
  }

  .col-md-8.offset-md-1 {
    margin: 0 auto;
  }
</style>

<main>
  <% if @book.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/user', user: @user %>
        <%= render 'books/new', book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <%= render  'books/list', books: @books %>
      </div>
    </div>
  </div>
</main>
