<h2>User info</h2>
 <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
     <% end %>
     
<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  
 <%= form_with model: @user do |f| %>
 <label for="inputName">Name</label><br>
 <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_field :introduction, id: "inputIntroduction", placeholder: "自己紹介文", value: @introduction %><br>
  <label for="inputImage">ProfileImage</label><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  <br>
  <%= f.submit "Update User" %>
  <% end %>